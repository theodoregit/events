
 <%- include('includes/header-admin') %>


    <div class="admin-body">
      
        <!-- flash here -->
        <div class="all-event-container">
            <%- include('includes/flash') %>
            <div class="table-1">
                <table >
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Profile</th>
                            <th>Event Name</th>
                            <% if(role == "admin"){%>
                                <th>Organizer</th>
                            <%} %>
                            <th>Price</th>
                            <th>Starting Date</th>
                            <th>Last Date</th>
                            <th>Pickup Point</th>
                            <!-- <th>Status</th> -->
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                          var count = 1
                          eventsList.forEach((event)=>{ 
                            %>
                            <tr>
                                <td><%= count %></td>
                                <td><a href="/event/<%= event.id%>"><img width="40" height="40" src="/uploads/images/<%= event.thumbnail%>" alt=""></a></td>
                                <td><%=event.eventName%><a href=""></td>
                                <% if(role == "admin"){%>
                                    <td><%=event.organizer%></td>
                                <%} %>                                
                                <td><%=event.eventPrice%></td>
                                <td><%=event.startingDate%></td>
                                <td><%=event.lastDate%></td>
                                <td><%=event.pickupPoint%></td>
                                <td class="action-btn">
                                    <a href="/event/<%=event.id %>/edit" class=" border-shadow update-btn">
                                        <span class="text-gradient"><i class="fas fa-edit"></i></span>
                                    </a>
                                    <a href="/event/<%=event.id %>/delete" class=" border-shadow delete-btn">
                                        <span class="text-gradient"><i class="fas fa-trash-alt"></i></span>
                                    </a>
                                </td>
                            </tr>
                        <% count++ }) %>
                            
    
                    </tbody>
                   
                </table>
            </div>
        </div>
    </div>
    
    <script src="/js/admin.js"></script>
</body>
</html>


